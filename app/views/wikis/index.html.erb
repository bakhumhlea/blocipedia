<h1 class="wiki-head">Welcome to Blocipedia<%= link_to "", new_wiki_path, class: "btn btn-success glyphicon glyphicon-plus pull-right" %></h1>
<div class="container-fluid">
    <div class="row">
        <% @wikis.each do |wiki| %>
            <div class="col-md-8">
                <div class="thumbnail">
                    <div class="caption">
                        <h3><%= wiki.title %></h3>
                        <%= image_tag current_user.avatar_generator, class: "author-avatar" %>
                        <small>Author : <%= wiki.user.username %> | Publish : <%= time_ago_in_words(wiki.created_at) %> ago</small>
                        <br/>
                        <br/>
                        <p><%= wiki.body %></p>
                        <p>
                            <button class="btn btn-primary", role="button">
                                <span class="glyphicon glyphicon-bookmark" role="button"></span>
                            </button>
                            <%= link_to "Read", wiki_path(wiki.id), class: "btn btn-default", role: "button" %>
                        </p>
                    </div>
                </div>
            </div>
        <% end %>
    </div>
</div>
